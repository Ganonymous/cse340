<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => {%>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<form action="/order/delete/<%= locals.order_id %>" method="post" id="orderDelForm">
    <p>Confirm deletion - This action CANNOT be undone</p>
    <fieldset>
        <label>Customer<input type="text" name="customerName" id="customerName" value="<%= locals.customerName %>" readonly></label>
        <label>Year<input type="text" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" readonly></label>
        <label>Make<input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly></label>
        <label>Model<input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly></label>
        <label>Total<input type="text" name="order_total" id="order_total" required value="<%= locals.order_total %>" readonly></label>
        <input type="submit" value="Delete Order" id="deleteBtn">
        <input type="hidden" name="order_id"<% if(locals.order_id) { %> value="<%= locals.order_id %>" <% } %>>
    </fieldset>
</form>
