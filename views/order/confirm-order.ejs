<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => {%>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<form action="/order/place" method="post" id="orderForm">
    <p>Order this vehicle?</p>
    <fieldset>
        <label>Year<input type="text" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" readonly></label>
        <label>Make<input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly></label>
        <label>Model<input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly></label>
        <label>Price<input type="text" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>" readonly></label>
        <input type="submit" value="Order Vehicle" id="orderBtn">
        <input type="hidden" name="inv_id"<% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    </fieldset>
</form>
